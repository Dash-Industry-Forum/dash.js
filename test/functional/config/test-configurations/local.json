{
  "hostname": "localhost",
  "port": 4200,
  "protocol": "http:",
  "platform": "local",
  "seleniumServer": "http://localhost:4444/wd/hub",
  "browsers": [
    {
      "name": "chrome",
      "enabled": true,
      "flags": [
        "--disable-web-security",
        "--autoplay-policy=no-user-gesture-required",
        "--disable-popup-blocking",
        "--disable-search-engine-choice-screen"
      ]
    },
    {
      "name": "firefox",
      "enabled": true,
      "flags": [
        {
          "key": "media.gmp-manager.updateEnabled",
          "value": true
        },
        {
          "key": "media.eme.enabled",
          "value": true
        }
      ]
    }
  ],
  "reporters": [
    {
      "name": "default",
      "options": {
        "reportTestResults": false,
        "reportTestProgress": true
      }
    },
    {
      "name": "junit",
      "options": {
        "reportLogs": true
      }
    },
    {
      "name": "summary",
      "options": {
        "flatten": false
      }
    }
  ]
}
