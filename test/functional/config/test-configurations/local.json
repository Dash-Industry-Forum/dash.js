{
  "browsers": [
    "chrome_custom",
    "firefox_custom"
  ],
  "hostname": "localhost",
  "port": 4200,
  "protocol": "http",
  "customLaunchers": {
    "chrome_custom": {
      "base": "Chrome",
      "flags": [
        "--disable-web-security",
        "--autoplay-policy=no-user-gesture-required",
        "--disable-popup-blocking",
        "--disable-search-engine-choice-screen"
      ]
    },
    "firefox_custom": {
      "base": "Firefox",
      "prefs": {}
    }
  },
  "reporters": [
    "junit",
    "mocha",
    "html",
    "coverage"
  ]
}
